@model Assignment2.Models.Advertisement

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete add for community @Model.Community.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            File Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Url" style="max-width: 400px;" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.CommunityId">Back to List</a>
    </form>
</div>
